<h1>Lista użytkowników</h1>

<% if user_signed_in? && current_user.admin? %>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>Utworzono</th>
  </tr>
  </thead>
  <tbody>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
    </tr>
  <%end %>
  </tbody>
</table>
<%else %>
  <p>Nie masz odpowiednich uprawnień</p>
<% end %>